<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/bt_picture_bitmapoption_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="图片加载判断optionDemo" />

    <Button
        android:id="@+id/bt_pic_picture_from_gallary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="从图库获取图片" />

    <Button
        android:id="@+id/bt_matrix_operate_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="针对matrix参数的图片变换" />
    <Button
        android:id="@+id/bt_take_pic_for_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取图片设置头像" />

</LinearLayout>