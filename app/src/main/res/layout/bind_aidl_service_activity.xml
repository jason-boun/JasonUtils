<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_aidlservice_operate_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/aidlInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnBindAIDLService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="绑定AIDL服务" />

    <Button
        android:id="@+id/btnInvokeAIDLService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="调用AIDL服务" />
    <Button
        android:id="@+id/btnInvokeServiceMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="调用AIDL服务中的方法" />

</LinearLayout>