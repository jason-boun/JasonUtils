<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <FrameLayout
        android:id="@+id/ll_photo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|left|center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_groupmember_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/user_bg" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_delete_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/group_member_del"
            android:visibility="visible" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_groupmember_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="center"
        android:singleLine="true"
        android:text="TextView01"
        android:textColor="#000000"
        android:textSize="12sp" />

</RelativeLayout>