<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/blockbg_width_eage"
    android:orientation="horizontal"
    android:gravity="center_vertical" >

    <ImageView
        android:layout_weight="2.5"
        android:id="@+id/iv_bank_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/bank_zhaoshang" />

    <LinearLayout
        android:layout_weight="8"
        android:id="@+id/ll_blankinfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/quickpay_tv_bankname"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="招商银行"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/quickpay_tv_cardnumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="**** **** 1234 ****"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/quickpay_tv_cardtype"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信用卡"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_weight="1"
        android:id="@+id/iv_arrow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_button_right_light" />

</LinearLayout>