<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_adapterdemo_container"
    android:layout_margin="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button 
        android:id="@+id/bt_array_adapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ArrayAdapterDemo"
        android:textSize="18sp" />
    <Button 
        android:id="@+id/bt_array_adapter2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ArrayAdapterDemo2"
        android:textSize="18sp" />
    <Button 
        android:id="@+id/bt_simple_adapter_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SimpleAdapterDemo"
        android:textSize="18sp" />
    <Button 
        android:id="@+id/bt_simple_cursor_adapter_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SimpleCursorAdapterDemo"
        android:textSize="18sp" />
    <Button 
        android:id="@+id/bt_base_adapter_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BaseAdapterDemo"
        android:textSize="18sp" />
    <Button 
        android:id="@+id/bt_cursor_adapter_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CursorAdapterDemo"
        android:textSize="18sp" />

</LinearLayout>
