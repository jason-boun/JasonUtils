<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/bt_audio_mediaplayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AudioPlayerDemo" />

    <Button
        android:id="@+id/bt_video_mediaplayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VideoPlayerDemo" />
    <Button
        android:id="@+id/bt_sensor_mediaplayer_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SensorMediaPlayerDemo" />
    <Button
        android:id="@+id/bt_sound_pool_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SoundPoolDemo" />

</LinearLayout>