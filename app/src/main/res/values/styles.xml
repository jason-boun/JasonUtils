<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"/>

    <style name="AppTheme" parent="AppBaseTheme"/>

    <style name="CustomDialogItemText">
        <item name="android:paddingTop">10.0dip</item>
        <item name="android:paddingBottom">10.0dip</item>
        <item name="android:paddingLeft">20.0dip</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/btn_save_cancle_bg</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="PasscodeInputItemStyle">
        <item name="android:gravity">center</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="style_public_1">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="button_pre_style" parent="@style/button_next_style">
        <item name="android:layout_alignParentRight">false</item>
        <item name="android:drawableRight">@null</item>
        <item name="android:drawableLeft">@drawable/previous</item>
        <item name="android:text">上一步</item>
        <item name="android:onClick">pre</item>
    </style>

    <style name="button_next_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:drawableRight">@drawable/next</item>
        <item name="android:text">下一步</item>
        <item name="android:onClick">next</item>
    </style>

    <style name="MyAlertDialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="text_content_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">19sp</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:layout_marginTop">5dip</item>
    </style>

    <style name="widget_text">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/textColorPrimaryDark</item>
    </style>

    <style name="my_pb_style" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_medium_white</item>
    </style>
    
    <style name="main_title">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#cccccc</item>
    </style>
    
    <style name="payment_progress_loading">
        <item name="android:indeterminateDrawable">@anim/payment_pay_loading</item>
        <item name="android:indeterminateBehavior">repeat</item>
    </style>
    
    <style name="main_wrapcontent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    
    <style name="payment_paymethod_text">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#ff333333</item>
    </style>

    <style name="payment_paymethod_promotion_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ff5555</item>
    </style>
    
    <!-- 一网通支付 -->
    <style name="CMBAnimBottom" parent="@android:style/Animation">  
    	<item name="android:windowEnterAnimation">@anim/cmbkb_push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/cmbkb_push_bottom_out</item>
	</style>
	
	
    <style name="CmbDialogStyleBottomDark" parent="android:Theme.Dialog" >
        <item name="android:windowAnimationStyle">@style/CMBAnimBottom</item>
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--activity不变暗-->        
     </style>

    <style name="CmbDialogStyleBottom" parent="android:Theme.Dialog" >
        <item name="android:windowAnimationStyle">@style/CMBAnimBottom</item>
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--activity不变暗-->        
     </style>
     
     
	<style name="CmbDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->        
    </style>

</resources>